{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir":"./public/js/app",
    "lib": [
      "dom",
      "es6"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "public/js",
    "assets/app/polyfills.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "./aot",
    "skipMetadataEmit": true
  }
}